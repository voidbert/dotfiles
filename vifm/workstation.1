set slowfs+=/mnt/search
set slowfs+=/mnt/server
set slowfs+=/mnt/cluster
set slowfs+=/mnt/deucalion

" ------------------------------------------- CLIPBOARD -------------------------------------------

nnoremap yd :!echo -n %d | wl-copy && echo -n %d | wl-copy -p %i &<cr>
nnoremap yf :!echo -n %c:p | wl-copy && echo -n %c:p | wl-copy -p %i &<cr>
